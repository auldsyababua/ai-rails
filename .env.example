# AI Rails Environment Configuration
# Copy this file to .env and fill in your actual values

# === MCP Service URLs ===
# These point to your MCP services running on the AI Workhorse

# Codebase Summary MCP - Provides context about your project code
CODEBASE_SUMMARY_MCP_URL=http://10.0.0.2:8003

# Secrets MCP - Securely manages API keys and environment variables
SECRETS_MCP_URL=http://10.0.0.2:8004

# Sequential Thinking MCP - Provides structured reasoning
MCP_SEQUENTIAL_THINKING_URL=http://10.0.0.2:8001

# Context7 MCP - Vector database for documentation context
CONTEXT7_URL=http://10.0.0.2:8002

# Brave Search MCP - Web search capabilities
BRAVE_SEARCH_MCP_URL=http://10.0.0.2:8005

# n8n Webhook Base URL - For automation workflows
N8N_WEBHOOK_BASE_URL=http://192.168.1.3:80/n8n/webhook/

# === Authentication Tokens ===
# Required for secure MCP communication

# Authentication token for SecretsMCP
AI_RAILS_SECRETS_MCP_AUTH_TOKEN=your-secrets-mcp-auth-token-here

# === LLM Configuration ===

# Ollama base URL (local LLM server)
OLLAMA_BASE_URL=http://10.0.0.2:11434

# Claude API Key (optional - for fallback to Claude)
# Will be retrieved via SecretsMCP if not set here
ANTHROPIC_API_KEY=

# === Project Context ===
# Optional: Set a default project name for context
AI_RAILS_PROJECT_NAME=

# === Logging Configuration ===
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# === Optional MCP Services ===
# Uncomment and configure if you have these services

# GitHub MCP - For repository interactions
# GITHUB_MCP_URL=http://10.0.0.2:8006

# Docker MCP - For container management
# DOCKER_MCP_URL=http://10.0.0.2:8007

# PostgreSQL MCP - For database operations
# POSTGRESQL_MCP_URL=http://10.0.0.2:8008

# Grafana MCP - For monitoring dashboards
# GRAFANA_MCP_URL=http://10.0.0.2:8009

# Sentry MCP - For error tracking
# SENTRY_MCP_URL=http://10.0.0.2:8010

# === Development Settings ===
# Enable debug mode for verbose output
DEBUG=false

# Maximum retries for LLM calls
MAX_LLM_RETRIES=3

# Timeout for LLM calls (seconds)
LLM_TIMEOUT=300

# Timeout for MCP calls (seconds)
MCP_TIMEOUT=60